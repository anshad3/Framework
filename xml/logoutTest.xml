<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="Logout Testcases" parallel="false" verbose="5"
	>

	<listeners>
		<listener class-name="com.base.SITListener">
		</listener>
	</listeners>
	
	 <test name="verifyLogOutFromHomePage">
		
		<classes>
			<class name="com.logout.testcases.LogOutTestCases">
				<methods>
					<include name="verifyLogOutFromHomePage"/>
				</methods>
			</class>
		</classes>
	</test> 
	
	 <test name="verifyLogOutFromAddCustomer">
		
		<classes>
			<class name="com.logout.testcases.LogOutTestCases">
				<methods>
					<include name="verifyLogOutFromAddCustomerPage"/>
				</methods>
			</class>
		</classes>
	</test> 
	
	 <test name="verifyLogOutFromShowCustomer">
		
		<classes>
			<class name="com.logout.testcases.LogOutTestCases">
				<methods>
					<include name="verifyLogOutFromShowCustomerPage"/>
				</methods>
			</class>
		</classes>
	</test> 
	
</suite>